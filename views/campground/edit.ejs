<%- include("../partials/header") %>
<div class="container text-center pt-3">
  <h2 class="h2">
    Edit <span class="text-primary"><%= foundCampground.name %></span>
  </h2>
  <form
    action="/campgrounds/<%= foundCampground._id %>?_method=PUT"
    method="POST" enctype="multipart/form-data"
  >
    <div class="form-group">
      <label>Campground Name</label>
      <input
        type="text"
        name="campground[name]"
        value="<%= foundCampground.name %>"
        class="form-control"
      />
    </div>
    <div class="form-group">
      <label>Campground Price</label>
      <input
        type="number"
        name="campground[price]"
        value="<%= foundCampground.price %>"
        class="form-control"
      />
      <div class="form-group">
        <label for="exampleInputEmail1">Image URL</label>
        <input
          type="file"
          name="image"
          class="form-control"
          id="image"
          accept="image/*"
        />
    </div>
    <div class="form-group">
      <label>Description</label>
      <input
        type="text"
        name="campground[desc]"
        class="form-control"
        value="<%= foundCampground.desc %>"
      />
    </div>
    <button type="submit" class="btn btn-default btn-lg btn-block">
      Submit
    </button>
  </form>
</div>
<%- include("../partials/footer") %>
