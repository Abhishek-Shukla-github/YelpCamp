<%- include("../partials/header") %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to the Yelpcamp!</h1>
      <p>View our campgrounds!</p>
      <a href="/campgrounds/new" class="btn btn-lg btn-primary"
        >Add campground</a
      >
    </div>
  </header>

  <div class="row" style="display: flex; flex-wrap: wrap;">
    <% campgrounds.forEach((camp)=>{ %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%= camp.image %>" alt="" />
        <div class="caption">
          <h3><%= camp.name %></h3>
        </div>
        <p>
          <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary"
            >More info</a
          >
        </p>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<%- include ("../partials/footer") %>
